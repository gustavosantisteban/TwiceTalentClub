@model William_Santisteban_02_08_2016.ViewModels.ReglamentoViewModel

@{
    ViewBag.Title = "Agregar";
}

<div class="col-md-8">
    @using (Html.BeginForm("Agregar", "Reglamento", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-error" })

        <div class="form-group">
            @Html.LabelFor(m => m.NombreReglamento, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(m => m.NombreReglamento, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-wpforms">
                    </span>
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Descripcion, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 input-group">
                @Html.TextAreaFor(m => m.Descripcion, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-wpforms">
                    </span>
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Estado, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 input-group">
                @Html.DropDownListFor(m => m.Estado, ViewBag.EstadoReglamento as SelectList, htmlAttributes: new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-check-circle-o">
                    </span>
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaConfeccion, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(m => m.FechaConfeccion, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-calendar-times-o">
                    </span>
                </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.FechaVigencia, new { @class = "col-md-2 control-label" })
            <div class="col-md-6 input-group">
                @Html.TextBoxFor(m => m.FechaVigencia, new { @class = "form-control" })
                <span class="input-group-addon">
                    <span class="fa fa-calendar-check-o">
                    </span>
                </span>
            </div>
        </div>

    }
</div>
